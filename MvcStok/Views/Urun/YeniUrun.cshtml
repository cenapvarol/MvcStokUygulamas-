@model MvcStok.Models.Entity.TBLKATEGORILER


@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>YeniUrun</h2>

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNADI" />
    </div>
    <div>
        <label>Ürün Kategori</label>
        @Html.DropDownListFor(m =>m.KATEGORIAD,(List<SelectListItem>)ViewBag.degerler,new { @class="form-control"})
    </div>
    <div>
        <label>Ürün Fiyat</label>
        <input type="number" class="form-control" name="FIYAT" />
    </div>
    <div>
        <label>Ürün Marka</label>
        <input type="text" class="form-control" name="MARKA" />
    </div>
    <div>
        <label>Ürün Stok</label>
        <input type="number" class="form-control" name="STOK" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>
