@using MvcStok.Models.Entity
@model  List<TBLURUNLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2>Ürünler Listesi</h2>

<table class="table table-bordered">

    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>ÜRÜN KATEGORY</th>
        <th>ÜRÜN FİYAT</th>
        <th>ÜRÜN MARKA</th>
        <th>ÜRÜN STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    
    <tbody>
        @foreach (var urn in Model)
        {
        <tr>
            <td>@urn.URUNID </td>
            <td>@urn.URUNADI</td>
            <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
            <td>@urn.FIYAT</td>
            <td>@urn.MARKA</td>
            <td>@urn.STOK</td>
            <td><a href="/URUN/SIL/@urn.URUNID" class="btn btn-danger">SİL</a></td>
            <td><a href="/URUN/UrunGuncelle/@urn.URUNID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>


        }

    </tbody>

</table>
<a href="/URUN/YeniUrun" class="btn btn-primary"> YENİ URUN EKLE</a>







