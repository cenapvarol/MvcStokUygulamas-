
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2>Ürünler Listesi</h2>

<table class="table table-bordered">

    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>ÜRÜN KATEGORY</th>
        <th>ÜRÜN FİYAT</th>
        <th>ÜRÜN MARKA</th>
        <th>ÜRÜN STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    
    <tbody>
        @foreach (var item in ViewBag.degerler as List<MvcStok.Models.Entity.TBLURUNLER>)
        {
        <tr>
            <td>@item.URUNID</td>
            <td>@item.URUNADI</td>
            <td>@item.URUNKATEGORI</td>
            <td>@item.FIYAT</td>
            <td>@item.MARKA</td>
            <td>@item.STOK</td>
            <td><a href="/URUN/SIL/@item.URUNID" class="btn btn-danger">SİL</a></td>
            <td><a href="/URUN/GUNCELLE/@item.URUNID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>


        }

    </tbody>

</table>
<a href="/URUN/YeniUrun" class="btn btn-primary"> YENİ URUN EKLE</a>







