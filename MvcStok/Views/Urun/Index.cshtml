@using MvcStok.Models.Entity
@model  List<TBLURUNLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2>Ürünler Listesi</h2>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>ÜRÜN KATEGORY</th>
            <th>ÜRÜN FİYAT</th>
            <th>ÜRÜN MARKA</th>
            <th>ÜRÜN STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <td>@urn.URUNID </td>
                <td>@urn.URUNADI</td>
                <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
                <td>@urn.FIYAT</td>
                <td>@urn.MARKA</td>
                <td>@urn.STOK</td>
                <td><a href="/URUN/SIL/@urn.URUNID" class="btn btn-danger">SİL</a></td>
                <td><a href="/URUN/UrunGuncelle/@urn.URUNID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>


        }

    </tbody>

</table>
<a href="/URUN/YeniUrun" class="btn btn-primary"> YENİ URUN EKLE</a>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>        

<link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>
